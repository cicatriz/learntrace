<div class="row">
  <div class="span12">
    <div class="pull-right">
      <%= link_to items_path, :class => 'btn btn-large' do %>
        <i class="icon-random"></i> Explore
      <% end %>
      <%= link_to library_path, :class => 'btn btn-large' do %>
        <i class="icon-book"></i> Library
      <% end %>
    </div>
  </div>
</div>
<h2>Latest activity</h2>

<div class="row">
  <div class="span4">
    <%= render :partial => 'pins/shared_pins', :locals => { :pins => @pins.values_at(* @pins.each_index.select {|i| i % 3 == 0}) } %>
  </div>
  <div class="span4">
    <%= render :partial => 'pins/shared_pins', :locals => { :pins => @pins.values_at(* @pins.each_index.select {|i| i % 3 == 1}) } %>
  </div>
  <div class="span4">
    <%= render :partial => 'pins/shared_pins', :locals => { :pins => @pins.values_at(* @pins.each_index.select {|i| i % 3 == 2}) } %>
  </div>
</div>

