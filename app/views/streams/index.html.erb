<% if current_user %>
<h2>Your courses</h2>
  <% if current_user.streams.count > 0 %>
    <%= render current_user.streams %>
  <% else %>
    Nothing yet!
  <% end %>

  <div class="row-fluid">
    <%= render 'form' %>
    <h2>or <%= link_to "explore learning resources on Learnstream", items_path %></h2>
  </div>
  <hr>
  <h2>Courses on Learnstream</h2>
  <%= render @streams.where('user_id != ?', current_user.id) %>
<% else %>
  <h2>Courses on Learnstream</h2>
  <%= render @streams %>
<% end %>
