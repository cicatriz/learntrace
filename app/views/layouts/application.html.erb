<!DOCTYPE html>
<html>
<head>
  <title>Learnstream</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <%= render "layouts/application/header" %>
  <div class="container">

    <% if notice %>
      <p id="flash_notice" class="notice"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p id="flash_alert" class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
