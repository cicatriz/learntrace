<h1>Streams</h1>

<div class="row">
  <div class="col-md-12">
    <table>
      <% @streams.each do |stream| %>
        <tr>
          <td><%= link_to stream.name, stream %></td>
          <td><%= render 'streams/archive_or_unarchive', :stream => stream %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
