<%= form_for(@item, :html => { :class => "form-horizontal" }) do |f| %>
  <div class="modal-body">
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
          <% @item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <fieldset>

      <div class="control-group">
        <%= f.label :name, { :class => "control-label" } %>
        <div class="controls">
          <%= f.text_field :name, {:class => 'input-xlarge'} %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, { :class => "control-label" } %>
        <div class="controls">
          <%= f.text_area :description, { :rows => "3", :class => "input-xlarge"} %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :url, { :class => "control-label" }%>
        <div class="controls">
          <%= f.text_field :url, {:class => 'input-xlarge'}  %>
          <p class="help-block">Note: A thumbnail will be chosen automatically... <br />We hope to support uploading your own thumbnails soon!</p>
        </div>

      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit  :class => "btn btn-primary"  %>
      <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    </div>
  </fieldset>
<% end %>
