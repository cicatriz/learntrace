<h3 id="item-name"><%= pin.item.name %></h3>
<br>

<div class="embed">
  <%= link_to pin.item.name, pin.item.url %>
</div>


<% if pin.user == current_user %>
  <% if pin.complete? %>
    Completed at
  <% else %>
    Scheduled at 
  <% end %>
  <%= pin.display_date %>

  <% unless pin.complete? %>
    <%= link_to stream_stream_pin_path(@stream, pin), method: :put, remote: true, class: 'btn' do %>
      <i class="icon-ok"></i> Complete!
    <% end %>
  <% end %>
  <%= link_to stream_stream_pin_path(@stream, pin), method: :delete, remote: true, confirm: "Are you sure you want to remove this item?", class: 'btn' do %>
    <i class="icon-remove"></i> Remove
  <% end %>
<% end %>
