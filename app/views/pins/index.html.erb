<div class="row" id="library-header">
  <span class="pull-right"><%= link_to "Public Link", public_library_path(:user_id => current_user.id) %></span>
  <br />
  <h2>Drag your pins to the right category!</h2>
</div>
  
<div class="row" id="pin-kanban">
  <div class="span4">
    <div class="board">
      <h2>To do</h2>
      <div id="todo-items" data-status="todo" class="sortable-board">
        <%= render @pins.todo %>
        <div>&nbsp;</div>
      </div>
    </div>
  </div>

  <div class="span4">
    <div class="board">
      <h2>Doing</h2>
      <div id="doing-items" data-status="doing" class="sortable-board">
        <%= render @pins.doing %>
        <div>&nbsp;</div>
      </div>
    </div>
  </div>

  <div class="span4">
    <div class="board">
      <h2>Done</h2>
      <div id="done-items" data-status="done" class="sortable-board">
        <%= render @pins.done %>
        <div>&nbsp;</div>
      </div>
    </div>
  </div>

</div>


<hr>
<h3>Add an item</h3>

<%= render 'items/form' %>
